@model Product

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>


<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            @if(Language.languages == "CZ"){
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.ImageSrc" alt="Zvíře: @Model.NameCZ" /></div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">@Model.NameCZ</h1>
                    <div class="fs-5 mb-5">
                        <span>@Model.Price.ToString("C2")</span>
                    </div>
                    <p class="lead">@Model.DescriptionCZ</p>

                    <div class="text-center">
                        <button class="btn btn-outline-dark flex-shrink-0" type="button" onclick=" Buy(@Model.ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrderNotCart" , new { Area="Customer" })', '#total_price' , '@System.Globalization.CultureInfo.CurrentCulture.Name' )">
                            <i class="bi-cart-fill me-1"></i>
                            Koupit
                        </button>

                    </div>
                </div>
            }else{
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.ImageSrc" alt="Animal: @Model.NameEN" /></div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">@Model.NameEN</h1>
                    <div class="fs-5 mb-5">
                        <span>@Model.Price.ToString("C2")</span>
                    </div>
                    <p class="lead">@Model.DescriptionEN</p>

                    <div class="text-center">
                        <button class="btn btn-outline-dark flex-shrink-0" type="button" onclick=" Buy(@Model.ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrderNotCart" , new { Area="Customer" })', '#total_price' , '@System.Globalization.CultureInfo.CurrentCulture.Name' )">
                            <i class="bi-cart-fill me-1"></i>
                            Buy
                        </button>

                    </div>
                </div>
            }
            
        </div>
    </div>
</section>

@section Scripts
    {
    <link rel="stylesheet" href="~/css/Products.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <environment include="Development">
        <script src="~/js/Product.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Product.min.js"></script>
    </environment>
}